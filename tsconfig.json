{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": [
    ".eslintrc.js",
    "src",
    "test"
  ],
  "exclude": [
    "jest.config.ts"
  ]
}
{
    "$schema": "https://json.schemastore.org/swcrc",
    "exclude": [
        "node_modules",
        "jest.config.ts"
    ],
    "jsc": {
        "target": "es2020",
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": false,
            "dynamicImport": false
        },
        "externalHelpers": false,
        "paths": {
            "@module/*": [
                "src/module/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "module": {
        "type": "commonjs"
    },
    "minify": true
}